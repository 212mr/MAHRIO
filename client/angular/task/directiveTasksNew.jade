.row
    .col-md-12
        .row
            .col-md-10
                .form-group
                    label(for="title")
                        |   Title:
                    input.form-control(ng-model="task.title" id="title")
            .col-md-2
                .form-group
                    label
                        |   Label:
                    .btn-group(style="width: 100%; margin-bottom: 10px;")
                        button.btn.btn-block.btn-danger.btn-sm.dropdown-toggle.form-control( type="button" class="color-chooser-btn" data-toggle="dropdown")
                            |   Color
                            span.caret
                        ul.dropdown-menu(id="color-chooser")
                            li
                                a.text-green( href="#")
                                    i.fa.fa-square
                                        |   Green
                            li
                                a.text-blue( href="#")
                                    i.fa.fa-square
                                        |   Blue
                            li
                                a.text-yellow( href="#")
                                    i.fa.fa-square
                                        |   Yellow
                            li
                                a.text-navy( href="#")
                                    i.fa.fa-square
                                        |   Navy
                            li
                                a.text-aqua( href="#")
                                    i.fa.fa-square
                                        |   Aqua
                            li
                                a.text-purple( href="#")
                                    i.fa.fa-square
                                        |   Purple
                            li
                                a.text-red( href="#")
                                    i.fa.fa-square
                                        |   Red

        .form-group
            ng-switch( on="task.description")
                div(ng-switch-when="true")
                    textarea( id="wysihtml5-content" wysihtml5 placeholder="Enter text ..." ng-model="task.description"
                        style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #e3e3e3; padding: 10px;")
                div(ng-switch-default)
                    textarea( id="wysihtml5-content" wysihtml5 placeholder="Enter text ..." ng-model="task.description"
                    style="width: 100%; height: 200px; font-size: 14px; line-height: 18px; border: 1px solid #e3e3e3; padding: 10px;")
        .modal-footer
            .pull-right
                button.btn.btn-default( ui-sref="tasks" ui-sref-opts="{reload: true}" )
                    i.fa.fa-times
                    |   Cancel
                button.btn.btn-primary( ng-click="save()" )
                    i.fa.fa-floppy-o
                    |   Save