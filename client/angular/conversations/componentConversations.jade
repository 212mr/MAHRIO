.list-group
    a.list-group-item( href="javascript:void(0)" ng-class="conversation._id === currentConversation._id ? 'active' : ''"
        ng-repeat="conversation in conversationList track by $index" ng-click="loadConversation(conversation._id)")
        h5.list-group-item-heading
            |   {{conversation.members}}
        p.list-group-item-text
            |   {{conversation.lastMessage | limitTo : 40}}


