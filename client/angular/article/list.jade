.row
    .form-group.col-xs-12.col-sm-4.col-sm-offset-4.col-md-6.col-md-offset-3.col-lg-2.col-lg-offset-5(ng-show="access.indexOf('admin') !== -1 || access.indexOf('sudo') !== -1")
        a.btn.btn-primary.btn-block(ui-sref="articles.new" ui-sref-opts="{reload: true}")
            i.fa.fa-plus
            |   Add Article
.row(id="articlesList")
    .col-md-10.col-md-offset-1.col-sm-12
        ul(style="list-style-type: none; padding: 0; margin: 0")
            li( ng-repeat="article in articles track by $index")
                a(ui-sref="articles.detail({id: article._id})" ui-sref-opts="{reload: true}")
                    figure
                        img( ng-src='{{article.primaryImage.url}}')
                        figcaption(class="credit")
                    h3
                        |{{article.title}}
                p.bg-green.label.pull-left
                    |   {{article.owner.profile.firstName}} {{article.owner.profile.lastName}}
                p.bg-yellow.label.pull-right.hidden-sm.hidden-xs
                    |   {{article.created | date:'medium'}}
                p.bg-yellow.label.pull-right.hidden-md.hidden-lg
                    |   {{article.created | date}}
                br
                br.hidden-xs.hidden-sm
                div(class="article-content")
                    p(ng-repeat="section in article.sections track by $index")
                        |{{section.body}}
                .form-group
                    a.btn.btn-primary.btn-block.form-control(ui-sref="articles.detail({id: article._id})" ui-sref-opts="{reload: true}")
                        |   Continue Reading
                .row(ng-show="access.indexOf('admin') !== -1 || access.indexOf('sudo') !== -1")
                    .col-xs-10.col-xs-offset-1
                        .row
                            .col-xs-6
                                a.btn.btn-default.btn-block(ui-sref="articles.edit({id: article._id})" ui-sref-opts="{reload: true}")
                                    i.fa.fa-edit
                                    |   &nbsp;Edit
                            .col-xs-6
                                a.btn.btn-block.btn-danger(ng-click="remove( article._id ); $event.stopPropagation()")
                                    i.fa.fa-trash
                                    |   &nbsp;Remove