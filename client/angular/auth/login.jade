.container
    .row.login
        .col-md-6.col-md-offset-3.col-sm-8.col-sm-offset-2.col-xs-10.col-xs-offset-1.snapScreen
            .panel.panel-default
                error-message-box( validation-errors="validationErrors" )
                .panel-body
                    h3.text-center
                        | {{locale['form'].page['signin'].title}}
                    form(novalidate ng-submit="login()")
                        form-input-tag(
                            model="user.email"
                            label="{{locale['form'].label['shared'].email}}"
                            required="true" icon="envelope"
                            regex="validate['email']")
                        form-input-tag(
                            model="user.password"
                            type="password"
                            label="{{locale['form'].label['shared'].password}}"
                            required="true" icon="lock")

                        .form-group.ng-hide(ng-show="vm.error")
                            .red.bold.margin {{error}}

                        .row
                            //
                                .col-md-6.col-xs-6.form-group
                                  label
                                    input( type="checkbox" ng-model="rememberMe" )
                                    |  {{locale['form'].page['signin'].rememberMe}}
                            .col-xs-12.text-right.form-group.col-xs-offset-0
                                a.text-muted( ui-sref="recoverpassword")
                                    | {{locale['form'].page['signin'].forgotPassword}}


                        button.btn.btn-block.btn-primary.btn-lg( type="submit" )
                            | {{locale['form'].button['login']}}

                        .row( ng-show="linkedIn")
                            .col-xs-12.text-center
                                img( src="/assets/img/linkedin-Active.png"
                                    ng-click="goToLinkedIn()" style="width: auto; margin: 20px auto 0; cursor: pointer")

                        br
                        br
                //
                  .form-group.text-center
                    p.text-center
                      | {{locale['form'].page['signin'].signUp}}
                    a.btn.btn-default( ui-sref="register")
                      | {{locale['form'].page['signin'].register }}