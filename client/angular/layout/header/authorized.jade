                        li.user-footer
                            .pull-left
                                a.btn.btn-default.btn-flat( ui-sref="profile" ui-sref-opts="{reload: true}")
                                    |   Profile
                            .pull-right
                                a.btn.btn-default.btn-flat( href="javascript: void(0)" ng-click="logout()" )
                                    |   Sign Out
                li
                    a( href="#" data-toggle="control-sidebar")
                        i.fa.fa-gears
