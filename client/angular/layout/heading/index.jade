section.content-header
    h1
        |   {{heading.title}}
        small
            |   {{heading.subTitle}}
    ol.breadcrumb
        li(ng-repeat="breadcrumb in heading.breadcrumbs track by $index"
            ng-class="{'active':$last}")
            a( ui-sref="{{breadcrumb.url}}" ng-show="!$last"
                ui-sref-opts="{reload: true}")
                i.fa.fa-dashboard(ng-show="!$index")
                |   {{breadcrumb.value}}
            span(ng-show="$last")
                |   {{breadcrumb.value}}
    hr( style="border: 2px solid #dddddd; margin: 15px 0 0;" class="hidden-xs")