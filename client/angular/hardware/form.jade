.row
    .col-xs-12
        .panel.panel-default.no-margin
            error-message-box( validation-errors="validationErrors" )
            .panel-body
                h3.text-center
                    | New Hardware
                form(novalidate id="article-form")
                    .form-group
                        label
                            |   Image
                        br
                        small(ng-show="!hardware._id")
                            |   Image upload available after hardware created
                        div(ng-show="hardware._id")
                            media( media="hardware.coverImage" container='hardware' actions="mediaActions" icon="fa-photo")
                    form-input-tag(
                        model="hardware.title"
                        label="Title"
                        required="true")
                    form-input-tag(
                        model="hardware.type"
                        label="Type"
                        required="true")
                    form-input-tag(
                        model="hardware.ip"
                        label="IP"
                        required="true")
                    form-input-tag(
                        model="hardware.port"
                        label="Port"
                        required="true")
            .panel-footer
                .row
                    .col-sm-4.col-md-3
                        button.btn.btn-block.btn-danger.btn-lg(ng-click="remove(hardware._id)" ng-show="hardware._id")
                            |   Remove
                    .col-sm-4.col-md-3.col-md-offset-3
                        a.btn.btn-block.btn-default.btn-lg(data-dismiss="modal" aria-label="Close")
                            |   Cancel
                    .col-sm-4.col-md-3.text-center(ng-class="{true: 'col-md-offset-3'}[ hardware._id ]")
                        button.btn.btn-block.btn-primary.btn-lg(ng-click="save()")
                            |   {{hardware._id ? 'Save' : 'Create'}}